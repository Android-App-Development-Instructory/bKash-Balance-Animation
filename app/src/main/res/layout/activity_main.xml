<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5026C"
    android:gravity="center"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/moneyLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/balance_bg"
        android:layout_marginStart="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginEnd="40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:visibility="invisible"
                android:layout_alignParentStart="true"
                android:id="@+id/moneyLeftIV"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/money_icon"
                android:background="@drawable/rounded_bg"
                android:padding="10dp"
                android:layout_margin="2dp"/>

            <ImageView
                android:visibility="invisible"
               android:layout_alignParentEnd="true"
                android:id="@+id/moneyRightIV"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/money_icon"
                android:background="@drawable/rounded_bg"
                android:padding="10dp"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/moneyTV"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tap_for_balance"
                android:textColor="#D5026C"
                android:textSize="20sp" />


        </RelativeLayout>







    </LinearLayout>


  </LinearLayout>